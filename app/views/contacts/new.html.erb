<%= form_for @contact do |f| %>
  <% if @contact.errors.any? %>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>
