* {
	margin: 0;
	padding: 0;
}

.analog {
	position: relative;
	width: 150px;
  margin: auto;
  	background-image:url(<%=asset_path "clockface.jpg"%>);
	list-style: none;
}

.analog,.analog .hour,.analog .min,.analog .sec {
	height: 150px;
}

.analog .hour,.analog .min,.analog .sec {
	position: absolute;
	width: 8px;
	top: 0;
	left: 70.5px;
  padding: 0;
}

.analog .sec {
	background-image:url(<%=asset_path "sechand.png"%>);
	z-index: 3;
}

.analog .min {
	background-image:url(<%=asset_path "minhand.png"%>);
	z-index: 2;
}

.analog .hour {
	background-image:url(<%=asset_path "hourhand.png"%>);
	z-index: 1;
}

.title {
	font-size: 11px;
	font-weight: bold;
	color: #333;
}

.analog .meridiem {
	margin-top: 90px;
	font-size: 11px;
	font-weight: bold;
	color: #333333;
  display: inline-block;
}
